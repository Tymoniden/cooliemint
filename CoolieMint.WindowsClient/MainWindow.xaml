<Window
    x:Class="CoolieMint.WindowsClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CoolieMint.WindowsClient"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:CoolieMint.WindowsClient.ViewModels"
    Title="MainWindow"
    Width="200"
    Height="450"
    d:DataContext="{d:DesignInstance vm:MainViewModel}"
    mc:Ignorable="d">
    <StackPanel Margin="5">
        <Button Click="OpenFileSelection">Select File</Button>
        <TextBox Text="{Binding SelectedPackageName, Mode=OneWay}" />
        <Button Click="UploadPackage">Upload</Button>
    </StackPanel>
</Window>
